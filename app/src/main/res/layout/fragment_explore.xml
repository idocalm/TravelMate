<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="25dp"
    android:paddingTop="25dp"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".fragments.ExploreFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Explore"
        android:theme="@style/tight"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I need help finding"
        android:theme="@style/tight"
        android:fontFamily="@font/bold"
        android:textColor="@color/hint"
        android:textSize="15sp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbarSize="0dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/hotels"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Hotels"
                android:textAllCaps="false"
                android:drawableStart="@drawable/hotel_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />

            <android.widget.Button
                android:id="@+id/flights"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Flights"
                android:textAllCaps="false"
                android:drawableStart="@drawable/flight_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />

            <android.widget.Button
                android:id="@+id/attractions"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Attractions"
                android:textAllCaps="false"
                android:drawableStart="@drawable/park_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />

            <android.widget.Button
                android:id="@+id/restaurants"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Restaurants"
                android:textAllCaps="false"
                android:drawableStart="@drawable/restaurant_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />


            <android.widget.Button
                android:id="@+id/rentals"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Rentals"
                android:textAllCaps="false"
                android:drawableStart="@drawable/park_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />


        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/explore_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

</LinearLayout>