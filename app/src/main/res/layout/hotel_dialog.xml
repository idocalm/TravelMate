<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textStyle="bold"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dialog_hotel_image"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:theme="@style/rounded"
            android:scaleType="centerInside"
            android:src="@drawable/hotel_example" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <android.widget.Button
                android:id="@+id/hotel_dialog_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/bold"
                android:paddingHorizontal="15dp"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <android.widget.Button
                android:id="@+id/hotel_dialog_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radius"
                android:backgroundTint="#003680"
                android:fontFamily="@font/bold"
                android:paddingHorizontal="15dp"
                android:text="Booking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>