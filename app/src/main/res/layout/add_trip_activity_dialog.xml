<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:minWidth="1000dp"
        android:minHeight="300dp"
        android:background="@drawable/radius_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD A NEW ACTIVITY"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/outline_black"
            android:theme="@style/tight"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/hint"
            android:theme="@style/tight"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:layout_weight="1"
                android:id="@+id/activity_date"
                android:layout_width="0px"
                android:paddingHorizontal="3dp"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textColorHint="@color/hint"
                android:theme="@style/tight"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />

                <EditText
                    android:layout_weight="1"
                android:id="@+id/activity_time"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:textColorHint="@color/hint"
                android:theme="@style/tight"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:padding="10dp"
                    />
        </LinearLayout>

        <EditText
            android:id="@+id/activity_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textColorHint="@color/hint"
            android:theme="@style/tight"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/activity_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:textColorHint="@color/hint"
            android:theme="@style/tight"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/activity_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cost"
            android:textColorHint="@color/hint"
            android:theme="@style/tight"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <android.widget.Button
                android:id="@+id/add_activity_note"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Add note"
                android:textAllCaps="false"
                android:drawableStart="@drawable/notes"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />

            <android.widget.Button
                android:id="@+id/add_activity_cost"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:text="Add cost"
                android:textAllCaps="false"
                android:drawableStart="@drawable/money"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/bold"
                android:textSize="13sp"
                android:textColor="@color/hint" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/submit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bold"
            android:text="SUBMIT"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:theme="@style/tight"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


    </LinearLayout>
